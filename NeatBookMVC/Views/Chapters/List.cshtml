@model NeatBookMVC.Models.Chapters.ChapterListViewModel

<h2>Chapters</h2>

@if (Model.Chapters != null && Model.Chapters.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chapter in Model.Chapters)
            {
                <tr>
                    <td>@chapter.Name</td>
                    <td>@chapter.Order</td>
                    <td>
                        <a asp-controller="Chapters" asp-action="Details" asp-route-id="@chapter.Id" class="btn btn-primary">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No chapters available for this book.</p>
}
