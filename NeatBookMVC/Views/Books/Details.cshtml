@model NeatBookMVC.Models.Books.BookDetailsViewModel

<h2>Book Details</h2>

<div>
    <h3>@Model.Name</h3>
    <a asp-controller="Chapters" asp-action="FirstChapterDetails" asp-route-bookId="@Model.Id" class="btn btn-primary">Read</a>
    <a asp-controller="Chapters" asp-action="List" asp-route-bookId="@Model.Id" class="btn btn-primary">Chapters List</a>
    <img src="@Model.CoverImagePath" alt="Book Cover" class="miniature-image">
    <p>Genre: @Model.BookGenre</p>
    <p>Language: @Model.Language</p>
    <p>Description: @Model.Description</p>
    <p>Status: @Model.BookStatus</p>
    <p>Rights: @Model.AuthorRights</p>
    <p>Age Restriction: @Model.AgeRestriction</p>
    <p>Creation Date: @Model.CreationDate.ToShortDateString()</p>
    @if (Model.PublishingDate.HasValue)
    {
        <p>Publishing Date: @Model.PublishingDate.Value.ToShortDateString()</p>
    }
    <p>View Count: @Model.ViewCount</p>
    <p>Created by: @Model.UserNickname</p>
    <p>Chapters: @Model.ChaptersCount</p>
    <p>Comments: @Model.CommentsCount</p>
    <p>Likes: @Model.LikesCount</p>
</div>
